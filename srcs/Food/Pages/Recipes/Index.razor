@page "/Recipes"

@using Majunga.RazorModal
@inherits IndexBase
<h3>Recipes</h3>


<button class="btn btn-primary" @onclick="() => GotoEditPage()">Create</button>

<Grid>
    <GridHeader>
        <th scope="col" @onclick="@(() => Reorder())">Name</th>
        <th scope="col">Actions</th>
    </GridHeader>
    <GridBody>
        @foreach (var recipe in this.recipes)
        {
            <tr>
                <td>@recipe.Name</td>
                <td>
                    <button class="btn btn-primary" @onclick="() => GotoEditPage(recipe.Id)">Edit</button>
                </td>
            </tr>
        }
    </GridBody>
</Grid>